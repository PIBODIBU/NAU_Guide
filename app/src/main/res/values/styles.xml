<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowActionModeOverlay">true</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

        <item name="colorPrimary">@color/colorAppPrimary</item>
        <item name="colorPrimaryDark">@color/colorAppDark</item>
        <item name="colorAccent">@color/colorAppAccent</item>
        <item name="android:textColorLink">@color/colorAppPrimary</item>

        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>

        <item name="textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge
        </item>

        <item name="textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>

    </style>


    <style name="AppTheme.AppCompatRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/colorAppPrimary</item>
    </style>


    <style name="AppTheme.TabLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="tabTextAppearance">@style/AppTheme.TabLayout.Text</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="AppTheme.TabLayout.Text" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AppTheme.ToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/colorAppPrimary</item>
    </style>


    <style name="AppTheme.ActionMode">
        <item name="background">@color/colorAppPrimary</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="titleTextStyle">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme.ActionMode.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.TextInputLayout" parent="TextAppearance.AppCompat">// TextInputLayout
        style
        <item name="colorControlNormal">@color/colorAppPrimary</item>
        <item name="colorControlActivated">@color/colorAppPrimary</item>
        <item name="colorControlHighlight">@color/colorAppPrimary</item>

        <item name="colorAccent">@color/colorAppPrimary</item>
        <item name="colorPrimary">@color/colorAppPrimary</item>

        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="android:textColorHighlight">@color/colorAppPrimary</item>
        <item name="android:textColorLink">@color/colorAppPrimary</item>
    </style>

    <style name="AppTheme.TextInputLayout.EditText">// EditText in TextInputLayout
        <item name="android:textSize">15sp</item>

        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/colorAppPrimary</item>
        <item name="colorControlHighlight">@color/colorAppPrimary</item>
        <item name="android:textColorLink">@color/colorAppPrimary</item>
    </style>


    <style name="AppTheme.EditText">
        <item name="colorControlNormal">@color/grey_text</item>
        <item name="colorControlActivated">@color/colorAppPrimary</item>
        <item name="colorControlHighlight">@color/colorAppPrimary</item>
    </style>


    <style name="myPopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
