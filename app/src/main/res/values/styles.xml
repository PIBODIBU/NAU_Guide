<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

        <item name="colorPrimary">@color/colorAppPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
    </style>

    <style name="AppTheme.ToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/grey_light</item>
        <item name="colorAccent">@color/colorAppPrimary</item>
    </style>

    <style name="AppTheme.ActionMode">
        <item name="background">@color/colorAppPrimary</item>
        <item name="android:background">@color/colorAppPrimary</item>
        <item name="titleTextStyle">@style/AppTheme.ActionMode.Title</item>
    </style>

    <style name="AppTheme.ActionMode.Title">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/colorAppPrimary</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="colorControlNormal">@color/colorAppPrimary</item>
        <item name="colorControlActivated">@color/colorAppPrimary</item>
        <item name="colorControlHighlight">@color/colorAppPrimary</item>
        <item name="colorAccent">@color/colorAppPrimary</item>
        <item name="android:textColorHint">@color/colorAppPrimary</item>
        <item name="android:textColorHighlight">@color/colorAppPrimary</item>
    </style>

    <style name="AppTheme.TextInputLayout.EditText">
        <item name="colorControlNormal">@color/grey_text</item>
        <item name="colorControlActivated">@color/colorAppPrimary</item>
        <item name="colorControlHighlight">@color/colorAppPrimary</item>
        <item name="colorAccent">@color/colorAppPrimary</item>
        <item name="android:textColorHint">@color/colorAppPrimary</item>
        <item name="android:textColorHighlight">@color/colorAppPrimary</item>
    </style>

</resources>
