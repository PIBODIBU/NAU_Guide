<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-8dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginRight="-8dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:foreground="?android:windowContentOverlay" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar" />

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/activity_info_6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/head_layout"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:background="@android:drawable/dialog_holo_light_frame">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/gerb_6" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/imageView6"
                    android:gravity="center"
                    android:text="Институт Компьютерных Информационных Технологий"
                    android:textColor="@color/main_blue"
                    android:textIsSelectable="false"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/body_info_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/head_layout"
                android:layout_alignRight="@+id/head_layout"
                android:layout_below="@+id/head_layout"
                android:layout_marginTop="-8dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignTop="@+id/image_address"
                    android:layout_marginLeft="42dp"
                    android:gravity="center_vertical|center_horizontal|start"
                    android:text="просп. Космонавта Комарова, 1, корп. 6"
                    android:textAlignment="gravity"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/main_blue"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical|center_horizontal|start"
                    android:text="(044) 444 - 44 - 44"
                    android:textAlignment="gravity"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/main_blue"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical|center_horizontal|start"
                    android:text="http://icit.nau.edu.ua"
                    android:textAlignment="gravity"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/main_blue"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/image_address"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/main_blue"
                    android:src="@drawable/ic_place_white_24dp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignLeft="@+id/image_address"
                    android:layout_alignStart="@+id/image_address"
                    android:layout_alignTop="@+id/textView3"
                    android:background="@color/main_blue"
                    android:src="@drawable/ic_local_phone_white_24dp" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignEnd="@+id/imageView10"
                    android:layout_alignRight="@+id/imageView10"
                    android:layout_alignTop="@+id/textView4"
                    android:background="@color/main_blue"
                    android:src="@drawable/ic_web_white_24dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/body_info_vectors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/head_layout"
                android:layout_alignRight="@+id/head_layout"
                android:layout_below="@+id/body_info_main"
                android:layout_marginTop="-8dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView10"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical|center_horizontal|start"
                    android:maxHeight="200dp"
                    android:scrollbars="vertical"
                    android:text="@string/activity_info_6_vectors"
                    android:textAlignment="gravity"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/main_blue"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Напрями пiдготовки"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/main_blue"
                    android:textSize="16dp" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>