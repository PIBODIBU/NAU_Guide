<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FirstLaunchActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_bg"
    android:orientation="vertical">

    <Button
        android:id="@+id/vk_sign_in"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/vk_button"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/gg_sign_in"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/vk_sign_in"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gg_button"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/fb_sign_in"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/gg_sign_in"
        android:layout_marginRight="20dp"
        android:background="@drawable/fb_button"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/login_skip"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@color/main_blue"
        android:gravity="center"
        android:text="Пропустить"
        android:textAlignment="gravity"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="9dp"
        android:layout_height="12dp"
        android:id="@+id/imageView2"
        android:background="@drawable/skip_button"
        android:layout_alignBottom="@+id/login_skip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="14dp" />

</RelativeLayout>