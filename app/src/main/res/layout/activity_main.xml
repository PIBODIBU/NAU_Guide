<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue"
        android:minHeight="?attr/actionBarSize" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/plus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="@string/plus_signed_id"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/plus_user"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button_vk_log_in"
        android:enabled="false"
        android:layout_alignBottom="@+id/button_vk_log_in" />

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="#ff939393"
        android:enabled="false"
        android:text="@string/sign_out_button_name"
        android:layout_below="@+id/sign_in_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/sign_in_button"
        android:layout_alignStart="@+id/sign_in_button" />

    <ListView
        android:id="@+id/circles_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_restart"
        android:layout_alignRight="@+id/button_restart"
        android:layout_alignTop="@+id/button_restart"
        android:orientation="vertical"
        android:padding="0dip"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_restart"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sign_out_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/sign_out_button"
        android:background="#ff00aa13"
        android:text="Restart" />

    <Button
        android:id="@+id/button_vk_log_in"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@color/main_blue"
        android:text="Sign in"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#010000"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/circles_list"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp" />

</RelativeLayout>
