<?xml version="1.0" encoding="utf-8"?>
<ua.nau.edu.Support.View.ImprovedSwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:isl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeLayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    isl:scrollableChildId="@+id/recyclerview_fragment_user_posts"
    tools:context=".UserProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_fragment_user_posts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_bg"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            android:scrollbars="vertical" />

    </RelativeLayout>
</ua.nau.edu.Support.View.ImprovedSwipeLayout>
