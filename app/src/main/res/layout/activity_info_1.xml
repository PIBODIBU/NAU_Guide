<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:clickable="true">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fillViewport="false">

        <RelativeLayout
            android:id="@+id/activity_info_6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_bg">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="6dp"
                card_view:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:id="@+id/head_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="8dp"
                        android:src="@drawable/gerb_6" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView6"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="false"
                        android:layout_alignTop="@+id/imageView6"
                        android:layout_marginRight="8dp"
                        android:layout_toEndOf="@+id/imageView6"
                        android:layout_toRightOf="@+id/imageView6"
                        android:gravity="center"
                        android:text="Институт Компьютерных Информационных Технологий"
                        android:textColor="@color/colorAppPrimary"
                        android:textIsSelectable="false"
                        android:textSize="15sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_info_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardView_head"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="6dp">

                <RelativeLayout
                    android:id="@+id/body_info_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/textView11"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical|left"
                        android:text="Контакты"
                        android:textAlignment="gravity"
                        android:textColor="@color/colorAppPrimary"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:id="@+id/body_info_contacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="false"
                        android:layout_below="@+id/imageView2">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_marginLeft="42dp"
                            android:gravity="center_vertical|center_horizontal|start"
                            android:text="просп. Космонавта Комарова, 1, корп. 6"
                            android:textAlignment="gravity"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_alignLeft="@+id/textView2"
                            android:layout_alignStart="@+id/textView2"
                            android:layout_below="@+id/textView2"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical|center_horizontal|start"
                            android:text="(044) 444 - 44 - 44"
                            android:textAlignment="gravity"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_alignLeft="@+id/textView3"
                            android:layout_alignStart="@+id/textView3"
                            android:layout_below="@+id/textView3"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical|center_horizontal|start"
                            android:text="http://icit.nau.edu.ua"
                            android:textAlignment="gravity"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/image_address"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignTop="@+id/textView2"
                            android:layout_marginLeft="8dp"
                            android:background="@color/colorAppPrimary"
                            android:src="@drawable/ic_place_white_24dp" />

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignLeft="@+id/image_address"
                            android:layout_alignStart="@+id/image_address"
                            android:layout_alignTop="@+id/textView3"
                            android:background="@color/colorAppPrimary"
                            android:src="@drawable/ic_local_phone_white_24dp" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignEnd="@+id/imageView10"
                            android:layout_alignRight="@+id/imageView10"
                            android:layout_alignTop="@+id/textView4"
                            android:background="@color/colorAppPrimary"
                            android:src="@drawable/ic_web_white_24dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_info_vectors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardView_info_main"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="6dp">

                <RelativeLayout
                    android:id="@+id/body_info_vectors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fab_2"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center_vertical|center_horizontal|start"
                        android:maxHeight="200dp"
                        android:scrollbars="vertical"
                        android:text="@string/activity_info_6_vectors"
                        android:textAlignment="gravity"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/fab_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/textView10"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="left|fill_vertical"
                        android:text="Напрями пiдготовки"
                        android:textAlignment="gravity"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorAppPrimary"
                        android:textSize="16sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/shadow"
        layout="@layout/toolbar_shadow" />

</RelativeLayout>